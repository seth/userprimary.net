%html
  %head
    %title
      = "User Primary - " + @item[:title]
    = stylesheet("style.css")
    = stylesheet("grid.css")
    = javascript("jquery.js")
    = javascript("jquery.timeago.js")
    = javascript("jquery.corner.js")
    = javascript("userp.js")
    = feed_link
    = site_meta_tags
    = openid
  %body
    #header_row.row
      #header_logo.column.grid_4
        %img{ :src => "/images/userp-logo.png" }
      .column.grid_5
        #navlist
          %ul
            %li
              = nav_link_to_unless_current("Home", "/")
            %li
              = nav_link_to_unless_current("Archives", "/archives/")
            %li
              = nav_link_to_unless_current("Software", "/software/")
            %li
              = nav_link_to_unless_current("Links", "/links/")
      .column.grid_3
        #feed_icon
          %a{ :href => "/feed.atom", :title => "User Primary Atom Feed" }
            %img.feed_icon{ :src => "/images/feed-icon-14x14.png" }
    #main_row.row
      #main
        - if @item[:kind] == "article"
          %h2
            = @item[:title]
        = yield
        - if @item[:kind] == "article"
          #post_details
            %p
              archived on
              = Time.parse(@item[:created_at]).strftime("%Y-%m-%d")
              in
              = tags_for(@item, :base_url => "/tags/")
            %p
              Have a comment?  Drop me an email or tweet, contact
              details are below.
    #footer_row.row
      .column.grid_8
        .row
          .column.grid_5
            %h2
              Coordinates
        .row
          .column.grid_2
            #coord_img
              %img{ :src => "/images/seth-hood2.jpg", :height => "150px" }
          .column.grid_3
            #coord_list
              %ul
                %li
                  email: < seth @ userprimary . net >
                %li
                  Twitter:
                  %a{ :href => "http://www.twitter.com/sfalcon" }
                    \@sfalcon
                  
                %li
                  = linked_in_badge
                %li
                  GitHub:
                  %a{ :href => "http://github.com/seth" }
                    seth
          .column.grid_3
            #feed_me
              %p
                Want to know when I post something new?
                Subscribe to the
                %a{ :href => "/feed.atom" }
                  RSS feed
                or follow
                %a{ :href => "http://www.twitter.com/sfalcon" }
                  me on Twitter
                = "."

        .row
          #copyright.column.grid_12
            = "Copyright 2006 - #{Time.now.year} Seth Falcon"

            

