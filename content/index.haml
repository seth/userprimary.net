.row
  .column.grid_6
    %h2
      Recent Posts
    - sorted_articles[0..4].each do |post|
      #post_summary
        %h3
          %a{ :href => post.identifier }
            = post[:title]
        %span.tag_list
          archived
        = timeago(post)
        %span.tag_list
          = " in: " + tags_for(post, :base_url => "/tags/")
        
  .column.grid_2
    %h2
      Other Stuff...

 